{
  "manifest_version": 2,

  "name": "Turta",
  "description": "This extension shows meaning of the selected word's meaning and example sentences",
  "version": "1.0.3",

  "browser_action": {
    "default_icon": "icons/dictionaryIcon.png",
    "default_popup": "popup.html",
    "default_title": "Turta"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/jquery.min.js",
                "scripts/translatorFactory.js",
                "scripts/TranslationBubble.js",
                "scripts/TranslationBubbleDoubleColumnAndRow.js",
                "scripts/content.js"],
      "css": ["css/main.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
      "scripts": [ "scripts/jquery.min.js",
          "scripts/firebase.js" ,
          "scripts/apicontroller.js",
          "scripts/background.js"],
      "persistent": false
  },

  "icons":{
    "128":"icons/dictionaryIcon.png"
  },

  "web_accessible_resources": [
      "icons/*.png",
      "icons/*.jpg"
    ],

    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
    "oauth2": {
            "client_id": "470726396129-9so4ug54cpqrvpd89g18i4367s6j15d2.apps.googleusercontent.com",
            "scopes": ["profile","email"]
        }  ,
        "key": "",
  "permissions": [
    "identity",
    "alarms",
    "storage",
    "https://ajax.googleapis.com/",
    "http://www.tureng.com/"
  ]
}
