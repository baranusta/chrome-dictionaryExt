{
  "manifest_version": 2,

  "name": "Sözlük",
  "description": "This extension shows meaning of the selected word's meaning and example sentences",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "denemeOfc"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["main.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

      "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
